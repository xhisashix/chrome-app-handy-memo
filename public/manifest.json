{
  "manifest_version": 3,
  "name": "Handy Memo",
  "version": "1.0.4",
  "action": {
    "default_popup": "./index.html"
  },
  "host_permissions": ["https://developer.chrome.com/*"],
  "permissions": ["tabs", "storage"],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+O",
        "mac": "MacCtrl+O"
      },
      "description": "Open the popup"
    }
  }
}
